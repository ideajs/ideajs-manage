.appHeader
  position: absolute
  z-index: 888
  width: 100%
  top: 0
  left: 0
  >div
    width: 100%
    height: 4rem
    background: linear-gradient(rgba(0,0,255,0.6), rgba(113,167,255,0.5))
    color: #f3f3f3
    >div
      float: left
      text-align: center
      height: 4rem
      line-height: 4rem
      i
        color: #f3f3f3
      >span
        color: #f3f3f3
        font-size: 1.4rem
        display: inline-block
        margin: 0 auto
    >div:nth-child(1)
      width: 4rem
      line-height: 4rem
    >div:nth-child(2)
      width: calc(100% - 8rem)
    >div:nth-child(3)
      width: 4rem
  .startPage
    background: rgba(0,0,0,0)!important
    >div
      width: 100%!important
      width: 100%!important
      text-align: center!important
      >span
        color: #030840!important
