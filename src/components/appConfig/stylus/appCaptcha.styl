.appCaptcha
  background: #fff
  .container
    width: 300px
    margin: 10px auto
  .headerFace
    border-radius: 100% 100%
    display: block
    margin: 0 auto 10px
  input
    color:#666
    font-size: 15px
  .ivu-icon
    color: #8686BC
  .ivu-icon-ios-person
    font-size: 20px
    width: 16px
  .ivu-form-inline .ivu-form-item
    width: 300px
  .ivu-form-item-error-tip
    padding: 5px 10px 0
    font-size: 12px
  .ivu-icon-ios-person:before
    margin-left: -2px
/*滑动拼图验证码样式*/
  #msg
    width: 100%
    line-height: 30px
    font-size: 12px
    color: #ff0000
    text-align: center
  .sliderText
    font-size: 13px
  .block
    position: absolute
    left: 0
    top: 0
  .sliderContainer
    position: relative
    text-align: center
    width: 300px
    height: 30px
    line-height: 28px
    margin-top: 15px
    background: #f3f3f3
    color: #999
    border: 1px solid #f3f3f3
    border-radius: 30px
    box-shadow: inset 0 3px 8px 1px rgba(0,0,0,0.15), 0 1px 0 rgba(255,255,255,0.35)
  .sliderMask
    position: absolute
    left: 0
    top: -1px
    height: 29px
    border: 0 solid #f3f3f3
    background: #A0F764
    border-radius: 30px 0 0 30px
    box-shadow: inset 0 3px 8px 1px rgba(0,0,0,0.15), 0 1px 0 rgba(255,255,255,0.35)
  .slider
    position: absolute
    top: -4px
    left: 0
    width: 40px
    height: 40px
    background: #f3f3f3
    border: 1px solid #e3e3e3
    border-radius: 100%
  .sliderIcon
    position: absolute
    right: 0
    top: -1px
    width: 38px
    height: 38px
    border-radius: 100%
    background: #f3f3f3 url(../../common/images/small-icon/icon-s-001.png) no-repeat center center
    background-size: 25px 25px
    box-shadow: 0 3px 5px rgba(0,0,0,0.25), inset 0 1px 0 rgba(255,255,255,0.3), inset 0 -5px 5px rgba(100,100,100,0.1), inset 0 5px 5px rgba(255,255,255,0.3)
  .refreshIcon
    position: absolute
    right: 0
    top: 0
    width: 38px
    height: 38px
    cursor: pointer
    border-radius: 100%
    background: #f3f3f3 url(../../common/images/small-icon/icon-s-004.png) no-repeat center center
    background-size: 25px 25px
    box-shadow: 0 3px 5px rgba(0,0,0,0.25), inset 0 1px 0 rgba(255,255,255,0.3), inset 0 -5px 5px rgba(100,100,100,0.1), inset 0 5px 5px rgba(255,255,255,0.3)
