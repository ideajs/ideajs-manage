.appCaptcha
  .container
    width: 30rem
    margin: 10px auto
  .headerFace
    border-radius: 100% 100%
    display: block
    margin: 0 auto 10px
  input
    color:#666
    font-size: 1.5rem
  .ivu-icon
    color: #8686BC
  .ivu-icon-ios-person
    font-size: 2rem
    width: 16px
  .ivu-form-inline .ivu-form-item
    width: 30rem
  .ivu-form-item-error-tip
    padding: 5px 10px 0
    font-size: 1.2rem
  .ivu-icon-ios-person:before
    margin-left: -2px
/*滑动拼图验证码样式*/
  #msg
    width: 100%
    line-height: 3rem
    font-size: 1.2rem
    color: #ff0000
    text-align: center
  .sliderText
    font-size: 1.3rem
  .block
    position: absolute
    left: 0
    top: 0
  .sliderContainer
    position: relative
    text-align: center
    width: 30rem
    height: 3rem
    line-height: 2.8rem
    margin-top: 1.5rem
    background: #f3f3f3
    color: #999
    border: 1px solid #f3f3f3
    border-radius: 30px
    box-shadow: inset 0 3px 8px 1px rgba(0,0,0,0.15), 0 1px 0 rgba(255,255,255,0.35)
  .sliderMask
    position: absolute
    left: 0
    top: -1px
    height: 2.9rem
    border: 0 solid #f3f3f3
    background: #A0F764
    border-radius: 30px 0 0 30px
    box-shadow: inset 0 3px 8px 1px rgba(0,0,0,0.15), 0 1px 0 rgba(255,255,255,0.35)
  .slider
    position: absolute
    top: -4px
    left: 0
    width: 4rem
    height: 4rem
    background: #f3f3f3
    border: 1px solid #e3e3e3
    border-radius: 100%
  .sliderIcon
    position: absolute
    right: 0
    top: -1px
    width: 3.8rem
    height: 3.8rem
    border-radius: 100%
    background: #f3f3f3 url(../../common/images/small-icon/icon-s-001.png) no-repeat center center
    background-size: 25px 25px
    box-shadow: 0 3px 5px rgba(0,0,0,0.25), inset 0 1px 0 rgba(255,255,255,0.3), inset 0 -5px 5px rgba(100,100,100,0.1), inset 0 5px 5px rgba(255,255,255,0.3)
  .refreshIcon
    position: absolute
    right: 0
    top: 0
    width: 3.8rem
    height: 3.8rem
    cursor: pointer
    border-radius: 100%
    background: #f3f3f3 url(../../common/images/small-icon/icon-s-004.png) no-repeat center center
    background-size: 25px 25px
    box-shadow: 0 3px 5px rgba(0,0,0,0.25), inset 0 1px 0 rgba(255,255,255,0.3), inset 0 -5px 5px rgba(100,100,100,0.1), inset 0 5px 5px rgba(255,255,255,0.3)
